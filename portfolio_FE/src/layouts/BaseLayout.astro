---
import {ViewTransitions} from "astro:transitions"
import CommonHead from "../components/CommonHead.astro";
import "../styles/global.css";
import Banner from "../components/Banner.astro";
import Sidebar from "../components/Sidebar.astro";
import ParticleBg from "../components/HibubbaIO/ParticleBg";
const {title, description, current = "/"} = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <CommonHead {title}/>
    <title>Portfolio</title>
</head>

<body class="font-sans bg-black text-white">
<ParticleBg client:load className="bg-behind"/>
<ViewTransitions/>

<button
        id="sidebarToggle"
        class="fixed left-4 top-4 z-50 md:hidden rounded-lg bg-gray-800/80 px-3 py-2 text-sm text-white backdrop-blur border border-white/10">
    Open Menu
</button>

<Sidebar/>

<!-- GRID CONTAINER -->
<div
        class="min-h-screen md:ml-64">

    <!-- BANNER -->
    <header class="sticky top-1 z-29">
        <Banner/>
    </header>

    <!-- SIDEBAR -->
    <!--<Sidebar/>-->


    <!-- MAIN (scrolls; important: min-h-0) -->
    <main class="min-h-0 overflow-y-auto p-4 md:p-6">
        <div class="hero mb-4">
            <slot name="hero"/>
        </div>
        <slot/>
    </main>
</div>
</body>
</html>

<script type="module" src="/src/scripts/SidebarToggle.ts"></script>