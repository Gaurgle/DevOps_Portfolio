---
import {ViewTransitions} from "astro:transitions"
import CommonHead from "../components/CommonHead.astro";
import "../styles/global.css";
import Banner from "../components/Banner.astro";
import Sidebar from "../components/Sidebar.astro";
import ParticleBg from "../components/HibubbaIO/ParticleBg";
const {title, description, current = "/"} = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <CommonHead {title}/>
    <title>Portfolio</title>
</head>

<body class="font-sans bg-black text-white relative">
<ParticleBg client:load className="bg-behind pointer-events-none" />
<ViewTransitions/>

<!-- Sidebar -->
<Sidebar/>

<!-- GRID CONTAINER -->
<div class="relative z-10 min-h-screen md:ml-64">

    <!-- BANNER -->
    <header class="fixed inset-x-0 top-0 z-50 md:ml-64 pointer-events-auto">
        <Banner/>
    </header>

    <!-- MAIN (scrolls; important: min-h-0) -->
    <main class="relative z-10 min-h-0 overflow-y-auto p-4 md:p-6 pt-[80px] md:pt-[120px]">
        <div class="hero mb-4">
            <slot name="hero"/>
        </div>
        <slot/>
    </main>
</div>

<script type="module">
    import "/src/scripts/sidebar-toggle.ts";
</script>
</body>
</html>