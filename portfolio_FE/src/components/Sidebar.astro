---
import HoverBlobs from "./HibubbaIO/HoverBlobs";
import MusicPlayer from "./MusicPlayer"; // Import the MusicPlayer component
import { tracks } from "../data/Tracks.ts"; // Import the tracks array

const { current = "/" } = Astro.props;
---

<aside
        id="sidebar"
        aria-hidden="true"
        class="fixed left-0 top-[64px] md:top-[80px]
         z-40 h-[calc(100vh-64px)] md:h-[calc(100vh-80px)]
         w-54 bg-black/70 backdrop-blur supports-[backdrop-filter]:bg-black/80
         border-r border-white/5
         transform transition-transform duration-300
         -translate-x-full md:translate-x-0">

    <nav class="relative h-full space-y-1 p-10 rounded-lg px-10 pt-20 md:pt-10">
        <!-- Subtle inner edge highlight -->
        <div class="absolute top-0 right-0 w-px h-full bg-white/10"></div>

        <!-- Links -->
        <a class="relative block pb-1 after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-yellow-500/80 after:transition-all after:duration-300 hover:after:w-full"
           href="/">Home</a>
        <a class="relative block pb-1 after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-pink-600/80 after:transition-all after:duration-300 hover:after:w-full"
           href="/projects">Projects</a>
        <a class="relative block pb-1 after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-blue-700/80 after:transition-all after:duration-300 hover:after:w-full"
           href="/about">About</a>
        <a class="relative block pb-1 after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-purple-500/80 after:transition-all after:duration-300 hover:after:w-full"
           href="/contact">Contact</a>

        <!-- Divider -->
        <div class="my-6 h-px bg-gray-600/50"></div>

        <!-- Social -->
        <div class="flex flex-col gap-2">
            <HoverBlobs client:idle
                        href="https://github.com/gaurgle/"
                        rel="noopener noreferrer"
                        target="_blank"
                        className="w-7 h-7 rounded-full flex items-center justify-center overflow-visible">
                <img src="https://cdn.simpleicons.org/github/ffffff"
                     alt="GitHub" width="25" height="20" />
            </HoverBlobs>

            <HoverBlobs client:idle
                        href="https://www.linkedin.com/in/andreasrooos/"
                        rel="noopener noreferrer"
                        target="_blank"
                        className="w-7 h-7 rounded-full flex items-center justify-center overflow-visible">
                <img src="https://img.icons8.com/?size=100&id=8808&format=png&color=ffffff"
                     alt="LinkedIn" width="25" height="20" />
            </HoverBlobs>
        </div>

        <!-- Optional: music player slot -->
        <!-- <MusicPlayer /> -->
    </nav>
</aside>