---
import HoverBlobs from "./HibubbaIO/HoverBlobs";

const {current = "/"} = Astro.props;
---
<div class="flex h-screen z-20">
    <aside class="w-100 bg-black text-white h-full fixed z-20">

        <nav class="sticky left-0 space-y-1 bg-black rounded-lg p-10 h-full">

            <div class="absolute top-0 right-0 w-[1px] h-full bg-gradient-to-r from-gray-950 to-gray-900"></div>

            <!-- Links -->
            <a class="relative pb-1 after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-yellow-500/80 after:transition-all after:duration-300 hover:after:w-full"
               href="/">Home</a><br>
            <a class="relative pb-1 after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-pink-600/80 after:transition-all after:duration-300 hover:after:w-full"
               href="/projects">Projects</a><br>
            <a class="relative pb-1 after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-blue-700/80 after:transition-all after:duration-300 hover:after:w-full"
               href="/about">About</a><br>
            <a class="relative pb-1 after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-purple-500/80 after:transition-all after:duration-300 hover:after:w-full"
               href="/contact">Contact</a><br>

            <!-- Divider -->
            <div class="flex justify-center items-center space-y-2 overflow-visible w-[140px]">
                <div class="h-px w-[150px] bg-gray-800 mt-[1px]"></div>
            </div>

            <!-- Social -->
            <div class="flex flex-col space-y-2 gap-2">
                <HoverBlobs client:idle
                            href="https://github.com/gaurgle/"
                            rel="noopener noreferrer"
                            target="_blank"
                            className="w-10 h-10 rounded-full flex items-center justify-center overflow-visable">
                    <img src="https://cdn.simpleicons.org/github/ffffff"
                         alt="GitHub" width="24" height="24"/>
                </HoverBlobs>

                <HoverBlobs client:idle
                            href="https://www.linkedin.com/in/andreasrooos/"
                            rel="noopener noreferrer"
                            target="_blank"
                            className="w-10 h-10 rounded-full flex items-center justify-center overflow-visable">
                    <img src="https://img.icons8.com/?size=100&id=8808&format=png&color=ffffff"
                         alt="LinkedIn" width="30" height="24"/>
                </HoverBlobs>
            </div>


        </nav>
    </aside>
</div>