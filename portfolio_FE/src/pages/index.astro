---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Hej! Jag är [Ditt Namn]" subtitle="Kotlin • Spring Boot • Postgres • Astro" current="/">
	<section class="grid gap-6">
		<div class="card">
			<h2 class="text-2xl font-semibold">About me</h2>
			<p class="mt-2 text-gray-600">
				I’m a developer building a modern portfolio: Kotlin + Spring Boot backend,
				Postgres on Render, Astro + Tailwind frontend.
			</p>
			<div class="mt-4 flex gap-3">
				<a class="btn" href="/projects">See projects</a>
				<a class="btn" href="/contact">Contact me</a>
			</div>
		</div>

		<div class="grid sm:grid-cols-2 gap-6">
			<div class="card">
				<h3 class="font-semibold text-lg">What I work with:</h3>
				<ul class="mt-2 list-disc list-inside text-gray-700">
					<li>Kotlin + Spring Boot</li>
					<li>PostgreSQL & Flyway</li>
					<li>Astro + TypeScript + Tailwind</li>
					<li>CI/CD with GitHub Actions</li>
				</ul>
			</div>
			<div class="card">
				<h3 class="font-semibold text-lg">Rubrik</h3>
				<p class="mt-2 text-gray-700">
					blablabla
				</p>
			</div>
		</div>
	</section>
</BaseLayout>
